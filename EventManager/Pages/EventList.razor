@page "/events"
@inject EventService EventService

<h3>Upcoming Events</h3>
<ul>
    @foreach (var eventt in EventService.GetEvents())
    {
        <li>
            <strong>@eventt.Name</strong> - @eventt.Date.ToShortDateString() (@eventt.Location)
            <br />
            <a href="/eventdetails/@eventt.Id" class="btn btn-primary">View Details</a>
        </li>
    }
</ul>
